# ==========================================
# LabSync-AI Backend Configuration
# ==========================================
# Copy this file to .env: cp .env.example .env

# ===================
# MongoDB Connection
# ===================
MONGODB_URI=mongodb://localhost:27017/labsync-ai

# ===================
# Server Configuration
# ===================
PORT=4000
NODE_ENV=development

# ===================
# Telegram Bot
# ===================
# Get from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=YOUR_TELEGRAM_BOT_TOKEN

# Webhook URL (use ngrok for local dev)
TELEGRAM_WEBHOOK_URL=https://your-ngrok-url.ngrok-free.app/api/webhook/telegram

# ===================
# Gemini AI API Keys
# ===================
# Get keys from: https://makersuite.google.com/app/apikey
# Multiple keys enable load balancing and rate limit handling

# Primary - Meeting Extraction
GEMINI_API_KEY=YOUR_GEMINI_API_KEY_1

# Secondary - Budget Design  
GEMINI_API_KEY_2=YOUR_GEMINI_API_KEY_2

# Tertiary - Fallback/Overflow
GEMINI_API_KEY_3=YOUR_GEMINI_API_KEY_3

# ===================
# Optional AI Keys (if needed)
# ===================
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here